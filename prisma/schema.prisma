generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model Letter {
  id               Int      @id @default(autoincrement())
  childLetterText  String
  santaResponseText String?
  allowSharing     Boolean  @default(true)
  createdAt        DateTime @default(now())

  @@map("letters")
}

model LetterClaude {
  id               Int      @id @default(autoincrement())
  childLetterText  String
  santaResponseText String?
  allowSharing     Boolean  @default(true)
  createdAt        DateTime @default(now())

  @@map("letters_claude")
}
